<Page
    x:Class="PRTGInsight.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRTGInsight.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Dashboard" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                <TextBlock x:Name="ServerUrlTextBlock" 
                           Text="Connected to: " 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Opacity="0.8"/>
                <TextBlock x:Name="PrtgVersionTextBlock" 
                           Text="PRTG Version: " 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Opacity="0.8"/>
            </StackPanel>
        </StackPanel>

        <!-- Status Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sensors Card -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,8,0"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Sensors" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Opacity="0.8"/>
                    <TextBlock x:Name="SensorCountTextBlock" 
                               Text="0" 
                               Style="{StaticResource TitleLargeTextBlockStyle}" 
                               FontWeight="SemiBold" 
                               Grid.Row="1"/>
                </Grid>
            </Border>

            <!-- Devices Card -->
            <Border Grid.Column="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="8,0,8,0"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Devices" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Opacity="0.8"/>
                    <TextBlock x:Name="DeviceCountTextBlock" 
                               Text="0" 
                               Style="{StaticResource TitleLargeTextBlockStyle}" 
                               FontWeight="SemiBold" 
                               Grid.Row="1"/>
                </Grid>
            </Border>

            <!-- Up Sensors Card -->
            <Border Grid.Column="2" 
                    Background="#E3F2FD" 
                    BorderBrush="#81D4FA" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="8,0,8,0"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Up Sensors" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Foreground="#0277BD"/>
                    <TextBlock x:Name="UpSensorsTextBlock" 
                               Text="0" 
                               Style="{StaticResource TitleLargeTextBlockStyle}" 
                               FontWeight="SemiBold" 
                               Foreground="#01579B" 
                               Grid.Row="1"/>
                </Grid>
            </Border>

            <!-- Down Sensors Card -->
            <Border Grid.Column="3" 
                    Background="#FFEBEE" 
                    BorderBrush="#EF9A9A" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="8,0,0,0"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Down Sensors" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Foreground="#C62828"/>
                    <TextBlock x:Name="DownSensorsTextBlock" 
                               Text="0" 
                               Style="{StaticResource TitleLargeTextBlockStyle}" 
                               FontWeight="SemiBold" 
                               Foreground="#B71C1C" 
                               Grid.Row="1"/>
                </Grid>
            </Border>
        </Grid>

        <!-- System Status -->
        <Border Grid.Row="2" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Margin="0,0,0,20"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="System Status" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,12"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CPU Load -->
                    <TextBlock Text="CPU Load" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Opacity="0.8"/>
                    <TextBlock x:Name="CpuLoadTextBlock" 
                               Text="N/A" 
                               Grid.Column="0" 
                               Grid.Row="1" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               FontWeight="SemiBold"/>

                    <!-- Memory -->
                    <TextBlock Text="Memory Usage" 
                               Grid.Column="1" 
                               Grid.Row="0" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Opacity="0.8"/>
                    <TextBlock x:Name="MemoryUsageTextBlock" 
                               Text="N/A" 
                               Grid.Column="1" 
                               Grid.Row="1" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               FontWeight="SemiBold"/>

                    <!-- Uptime -->
                    <TextBlock Text="System Uptime" 
                               Grid.Column="2" 
                               Grid.Row="0" 
                               Style="{StaticResource BodyTextBlockStyle}" 
                               Opacity="0.8"/>
                    <TextBlock x:Name="UptimeTextBlock" 
                               Text="N/A" 
                               Grid.Column="2" 
                               Grid.Row="1" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               FontWeight="SemiBold"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Recent Alerts -->
        <Border Grid.Row="3" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Recent Alerts" 
                           Style="{StaticResource SubtitleTextBlockStyle}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,12"/>
                <ListView x:Name="AlertsListView" 
                          Grid.Row="1" 
                          SelectionMode="None" 
                          Background="Transparent" 
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="12" 
                                         Height="12" 
                                         Fill="{Binding StatusColor}" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding Message}" 
                                           Grid.Column="1" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{Binding TimeStamp}" 
                                           Grid.Column="2" 
                                           Style="{StaticResource CaptionTextBlockStyle}" 
                                           Opacity="0.7" 
                                           Margin="12,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- No alerts message -->
                <TextBlock x:Name="NoAlertsTextBlock" 
                           Grid.Row="1" 
                           Text="No recent alerts" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Opacity="0.7" 
                           Visibility="Collapsed"/>

                <!-- Loading indicator -->
                <ProgressRing x:Name="LoadingRing" 
                              Grid.Row="1" 
                              IsActive="True" 
                              Width="40" 
                              Height="40" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Error InfoBar -->
        <InfoBar x:Name="ErrorInfoBar" 
                 Grid.Row="4" 
                 IsOpen="False" 
                 Severity="Error" 
                 Title="Error" 
                 VerticalAlignment="Bottom" 
                 Margin="0,20,0,0"/>
    </Grid>
</Page>
