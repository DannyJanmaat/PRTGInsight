<Page
    x:Class="PRTGInsight.Views.ConnectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRTGInsight.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Background with gradient -->
        <Rectangle Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#001A41" Offset="0.0" />
                    <GradientStop Color="#0E3B7C" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main layout with split view -->
        <SplitView x:Name="LoginSplitView" 
                   DisplayMode="CompactOverlay" 
                   IsPaneOpen="False"
                   CompactPaneLength="0"
                   OpenPaneLength="280"
                   PaneBackground="{ThemeResource CardBackgroundFillColorDefaultBrush}">

            <!-- Left pane for history -->
            <SplitView.Pane>
                <Grid Padding="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Login History" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               Margin="0,0,0,12"/>

                    <ListView x:Name="LoginHistoryListView" 
                              Grid.Row="1" 
                              SelectionMode="Single"
                              SelectionChanged="LoginHistoryListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,4"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </SplitView.Pane>

            <!-- Main content -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24"
                        MaxWidth="500"
                        MinWidth="450">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo and title -->
                        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Image Source="/Assets/PRTGLogo.png" Width="80" Margin="0,0,0,12"/>
                            <TextBlock Text="PRTG Insight" 
                                       Style="{StaticResource TitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Enterprise Monitoring Dashboard" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       Opacity="0.7"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Login form -->
                        <StackPanel Grid.Row="1" Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="ServerUrlTextBox" 
                                         PlaceholderText="PRTG Server URL"
                                         Header="Server URL"
                                         Width="400"
                                         HorizontalAlignment="Left"/>

                                <Button Grid.Column="1" 
                                        VerticalAlignment="Bottom"
                                        Margin="8,0,0,0"
                                        ToolTipService.ToolTip="Show Login History"
                                        Click="ToggleHistoryPane">
                                    <FontIcon Glyph="&#xE81C;" FontSize="16"/>
                                </Button>
                            </Grid>

                            <RadioButtons x:Name="AuthTypeRadioButtons" Header="Authentication Method">
                                <RadioButton x:Name="UsernamePasswordRadio" Content="Username/Password" Checked="AuthType_Changed"/>
                                <RadioButton x:Name="ApiKeyRadio" Content="API Key" IsChecked="True" Checked="AuthType_Changed"/>
                            </RadioButtons>

                            <!-- Username/Password fields -->
                            <StackPanel x:Name="UsernamePasswordPanel" Spacing="12" Visibility="Collapsed">
                                <TextBox x:Name="UsernameTextBox" 
                                         PlaceholderText="Username"
                                         Header="Username"
                                         Width="400"
                                         HorizontalAlignment="Left"/>

                                <PasswordBox x:Name="PasswordBox"
                                             PlaceholderText="Password"
                                             Header="Password"
                                             Width="400"
                                             HorizontalAlignment="Left"/>
                            </StackPanel>

                            <!-- API Key field -->
                            <StackPanel x:Name="ApiKeyPanel" Spacing="12">
                                <PasswordBox x:Name="ApiKeyBox"
                                             PlaceholderText="Enter your PRTG API Key"
                                             Header="API Key"
                                             Width="400"
                                             HorizontalAlignment="Left"/>
                                <TextBlock Text="Find your API Key in PRTG under Setup > Account Settings"
                                           TextWrapping="Wrap"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           FontSize="12"/>
                            </StackPanel>

                            <CheckBox x:Name="IgnoreSslCheckBox" 
                                      Content="Ignore SSL Certificate Errors" 
                                      IsChecked="True"/>
                        </StackPanel>

                        <!-- Status info -->
                        <InfoBar x:Name="StatusInfoBar"
                                 Grid.Row="2"
                                 IsOpen="False"
                                 Severity="Informational"
                                 Title="Status"
                                 Message="Enter connection details and click Connect"
                                 Margin="0,12,0,0"/>

                        <!-- Connection buttons -->
                        <Grid Grid.Row="3" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ProgressRing x:Name="LoadingRing" 
                                          IsActive="False" 
                                          Width="20" 
                                          Height="20"
                                          Grid.Column="0"
                                          VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                                <Button x:Name="CancelButton"
                                        Content="Cancel"
                                        Click="CancelButton_Click"
                                        IsEnabled="False"
                                        Width="80"/>

                                <Button x:Name="ConnectButton"
                                        Content="Connect"
                                        Click="ConnectButton_Click"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Width="80"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </SplitView>
    </Grid>
</Page>